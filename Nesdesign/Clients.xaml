<Page x:Class="Nesdesign.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nesdesign"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Klienci">

    <Grid Background="AliceBlue">
        <StackPanel>
            <Label Content="Klienci" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
            <DataGrid x:Name="ClientsDataView"
                      ItemsSource="{Binding Clients}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding clientId}" IsReadOnly="True" Width="70"/>
                    <DataGridTextColumn Header="Nazwa"
                                        Binding="{Binding nazwa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="2*"/>
                    <DataGridTextColumn Header="NIP"
                                        Binding="{Binding NIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Opis"
                                        Binding="{Binding opis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>