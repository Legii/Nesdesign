<UserControl x:Class="Nesdesign.NewOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nesdesign"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" MaxWidth="500" MaxHeight="400">
  

    <Border Background="White" Padding="20" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>


            </Grid.RowDefinitions>
            <Label Content="NOWE ZAMÓWIENIE" HorizontalAlignment="Center" FontSize="24"></Label>
            <ComboBox x:Name="OrderMode"  Grid.Row="1"  Height="20" Width="200" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Numer zamówienia" IsSelected="True"></ComboBoxItem>
                <ComboBoxItem Content="Ręcznie"></ComboBoxItem>
            </ComboBox>
            <Label Content="Numer zamówienia:" Grid.Row="2" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="txtOrderNumber" Width="200" Height="30" Grid.Row="3" Text=""></TextBox>
            <Label x:Name="LabelOrderDirPath" Visibility="Collapsed" Content="Ścieżka:" Grid.Row="4" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="TxtOrderDirPath" Grid.Row="5" Width="200" Visibility="Collapsed"></TextBox>
            <DockPanel Grid.Row="8" Margin="0,0,0,0" Width="Auto"  HorizontalAlignment="Center" >
                <Button  Content="Anuluj" Background="OrangeRed" Width="100" Margin="20,0,20,0" Height="20" Click="Cancel_Click"></Button>
                <Button  Content="OK" Width="100" Height="20" Background="AliceBlue" Margin="20,0,20,0" Click="Submit_Click"></Button>
            </DockPanel>
        </Grid>
    </Border>

</UserControl>
