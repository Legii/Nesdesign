<Page
    x:Class="Nesdesign.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nesdesign.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">



    <ScrollViewer>
        <StackPanel Margin="10">
            <DataGrid
                x:Name="SettingsDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Description}"
                        Header="Ustawienie"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="3*"
                        Binding="{Binding Value, Mode=TwoWay}"
                        Header="Wartość" />

                </DataGrid.Columns>
            </DataGrid>

            <Label
                Margin="0,20,0,10"
                Content="Pracownicy / podwykonawcy"
                FontSize="16"
                FontWeight="Bold" />
            <DataGrid
                x:Name="WhoDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="True"
                CanUserDeleteRows="False"
                ItemsSource="{Binding viewModel.Contractors}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Id}"
                        Header="ID"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Nazwa" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>

</Page>
