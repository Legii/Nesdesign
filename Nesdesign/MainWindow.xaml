<Window x:Class="Nesdesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nesdesign"
        mc:Ignorable="d"
        Title="Nesdesign" Height="800" Width="1200" MinWidth="1000" MinHeight="1000"
        WindowState="Maximized">

    <Window.Resources>

       

    </Window.Resources>






    <DockPanel>

        <!-- Navigation Panel -->
        <StackPanel DockPanel.Dock="Left" Background="#333" Width="150">
            <Button Content="Zapytania i projekty" Click="OffersClick" Margin="5"/>
            <Button Content="Klienci" Click="ClientsClick" Margin="5"/>
            <Button Content="Kreator" Background="LightBlue" Click="CreatorClick" Margin="5"/>

        </StackPanel>

        <!-- Content Area -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
