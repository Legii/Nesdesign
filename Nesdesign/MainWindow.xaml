<Window x:Class="Nesdesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nesdesign"
        mc:Ignorable="d"
        Title="Nesdesign" Height="800" Width="1200" MinWidth="1000" MinHeight="1000"
        WindowState="Maximized">

    <Window.Resources>

       

    </Window.Resources>






    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- Navigation Panel -->
        <StackPanel Grid.Column="0" Background="#333" Width="150" >
            <Button Content="Zapytania i projekty" Click="OffersClick" Margin="5"/>
            <Button Content="Klienci" Click="ClientsClick" Margin="5"/>
            <Button Content="Kreator" Background="LightBlue" Click="CreatorClick" Margin="5"/>
            <Button Content="Ustawienia" Margin="5,200,0,0" Click="SettingsClick">
                
            </Button>
        </StackPanel>

        <!-- Content Area -->
        <Frame  Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>


</Window>
