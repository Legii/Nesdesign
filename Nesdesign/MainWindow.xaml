<Window
    x:Class="Nesdesign.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nesdesign"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Nesdesign"
    Width="1200"
    Height="800"
    MinWidth="600"
    MinHeight="400"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources />

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  Navigation Panel  -->
        <Grid Background="#333">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Width="150">
                <Button
                    Margin="5"
                    Click="OffersClick"
                    Content="Zapytania i projekty" />
                <Button
                    Margin="5"
                    Click="ClientsClick"
                    Content="Klienci" />
                <Button
                    Margin="5"
                    Background="LightBlue"
                    Click="CreatorClick"
                    Content="Kreator" />
                <Button
                    Margin="5"
                    Background="#88aaff"
                    Click="CreateOfferClick"
                    Content="Nowe zapytanie"
                    Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Button
                    x:Name="DeleteOfferButtn"
                    Margin="5,10,5,10"
                    Background="Red"
                    Click="DeleteOfferButtn_Click"
                    Content="Usuń zaznaczone"
                    Foreground="White" />
                <Button
                    Margin="5"
                    Click="SettingsClick"
                    Content="Ustawienia" />
            </StackPanel>

        </Grid>

        <!--  Content Area  -->
        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />
    </Grid>


</Window>
